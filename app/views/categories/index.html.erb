<h1 align="center">Listing all categories </h1>
<div align="center">
	<%= will_paginate %>
		<% @categories.each do |category| %>
			<ul class="listing">
				<div class="row">
					<div class="well col-md-4 col-md-offset-4">
						<li class="article">
							<%= link_to "#{category.name}", category_path(category) %>
							<div class="article-actions">
							  <%= link_to "Edit", edit_category_path(category), class:"btn btn-md btn-primary" %>
							  <%= link_to "Delete", category_path(category), method: :delete, data: {confirm: "Are u sure?"},
							class:"btn btn-md btn-danger"  %>
							</div>
						</li>
					</div>
				</div>
			</ul>
		<% end %>
	<%= will_paginate %>
</div>
