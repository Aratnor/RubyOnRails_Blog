<h1 align="center">New Category </h1>
<%= render '/shared/errors', obj: @category %>

    <%= form_for(@category, :html => {class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
        <div class="col-md-2 control-label">
            <%= f.label :name%>
        </div>
        <div class="col-md-8">
            <%= f.text_field :name, class:"form-control", 
                    placeholder:"Enter username", autofocus:true%>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
    </div>       
    <%end%>
    <div class="col-md-4 col-md-offset-4">
        <%= link_to "Cancel Request Back to article listing", articles_path %>
    </div>
