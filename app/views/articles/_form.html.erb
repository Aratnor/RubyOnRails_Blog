<%= render '/shared/errors', obj: @article %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@article, :html => {class:"form-horizontal", role:"form"}) do |f| %>
        <div class="form-group">
            <div class="col-md-2 control-label">
                <%= f.label :title%>
            </div>
            <div class="col-md-8">
                <%= f.text_field :title, class:"form-control", placeholder:"Title goes here!", autofocus:true%>
            </div>
        </div>
        <div class="form-group"> 
            <div class="col-md-2 control-label"> 
                <%= f.label :description%>
            </div>
            <div class="col-md-8">  
                <%= f.text_area :description, rows:10, class:"form-control", placeholder:"Description goes here!"%>
            </div>   
        </div> 
        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
                    <%= b.label class:"btn btn-default check-btn" do%>
                        <%=b.check_box(class:"badgebox") + b.text %>
                        <span class="badge" style="margin-left: 5px">&check;</span>
                    <%end%>
                <% end %>
                </div>
            </div>
        </div>  
        <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
                <%= f.submit class:"btn btn-primary btn-lg" %>
            </div>
        </div>      
        <%end%>
        <div class="col-md-4 col-md-offset-4">
            <%= link_to "Cancel Request Back to article listing", articles_path %>
        </div>
    </div>
</div>
