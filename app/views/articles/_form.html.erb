<% if @article.errors.any?%>
  <ul>
<% @article.errors.full_messages.each do |msg| %>
    <li><%= msg  %></li>
    <% end %>
  </ul>
  <% end %>
<div class="row">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class:"form-horizontal", role:"form"}) do |f| %>
    <div class="form-group">
      <div class="col-md-2 control-label">
        <%= f.label :title%>
      </div>
      <div class="col-md-10">
        <%= f.text_field :title, class:"form-control", placeholder:"Title goes here!", autofocus:true%>
      </div>
    </div>
    <div class="form-group"> 
      <div class="col-md-2 control-label"> 
        <%= f.label :description%>
      </div>
      <div class="col-md-10">  
        <%= f.text_area :description, rows:10, class:"form-control", placeholder:"Description goes here!"%>
      </div>   
    </div> 
    <div class="form-group">
      <div class="col-sm-offset-2 col-md-10">
        <%= f.submit class:"btn btn-primary btn-lg" %>
      </div>
    </div>
       
    <%end%>
  </div>
</div>